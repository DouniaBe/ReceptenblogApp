<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             x:Class="ReceptenBlogApp.Views.OfflineRecipesPage">
    <StackLayout Padding="20">
        <Label Text="Offline recepten" FontSize="Large"/>
        <ListView ItemsSource="{Binding OfflineRecipes}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Name}" Detail="{Binding Description}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
